<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Card Style for Panels -->
    <Style x:Key="CardPanel" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.2" 
                                ShadowDepth="3" 
                                BlurRadius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Title Text Style -->
    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#2C3E50"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,20,0,10"/>
    </Style>

    <!-- Subtitle Text Style -->
    <Style x:Key="SubtitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#34495E"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>

    <!-- Word Display Style -->
    <Style x:Key="WordDisplay" TargetType="TextBlock">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="Foreground" Value="#2C3E50"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,20"/>
    </Style>

    <!-- Info Text Style -->
    <Style x:Key="InfoText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#7F8C8D"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Score Text Style -->
    <Style x:Key="ScoreText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#27AE60"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <!-- Gradient Background -->
    <LinearGradientBrush x:Key="GameBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#667EEA" Offset="0"/>
        <GradientStop Color="#764BA2" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="StartScreenBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4FACFE" Offset="0"/>
        <GradientStop Color="#00F2FE" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
